<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="./Whatsapp logo.jpeg" >
    <link rel="stylesheet" href="style.css">
    <title>Whatsapp mini</title>
</head>
<body>
    <h3>All Chats</h3>
    <br>
    <form method="GET" action="/chats/new">
        <button>New Chat!!!</button>
    </form>
    <br>
    <%for(let chat of chats){%>
        <div class="chat">
            <p>From : <%=chat.from%></p>
            <div class="messages">
                <p>message: <%=chat.message%> </p>
                <form method="GET" action="/chats/<%=chat._id%>/edit">
                    <button>Edit</button>
                </form>
                <br><br>
                <form method="post" action="/chats/<%=chat._id%>?_method=DELETE">
                    <button>Delete</button>
                </form>
            </div>
            <p>Received by <%=chat.to%></p>
            <hr>
            <p><%=chat.created_at.toString().split(" ")[4]%></chat></p>
            <p><%=chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
        </div>
        <br><br>
    <%}%>
</body>
</html>

